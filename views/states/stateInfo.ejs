      </div>
    </div>


  </header>

  <body>
    <div class="stateName">
      <%= state.name%></div>

    <div id="map"></div>
    <script>
      var NPMap = {
        div: 'map',
        locateControl: true,
        zoom: 6,
        center: {
          lat: '<%= state.lat%>',
          lng: '<%= state.long%>'
        },
        baseLayers: [
          'nps-parkTiles3'
        ],
        hashControl: true,
        overlays: [{
          preset: 'nps-places-pois',
          unitCodes: [
            'grsm'
          ]
        }]
      };

      (function () {
        var s = document.createElement('script');
        s.src = 'https://www.nps.gov/lib/npmap.js/4.0.0/npmap-bootstrap.js';
        document.body.appendChild(s);
      })();
    </script>
    <script>
      (function fetchData() {
        fetch('https://developer.nps.gov/api/v1/parks?stateCode=<%= state.value %>&api_key=9pmlVnQfy5VVDKxPYb8Du9UOMm6e5Nem5dGuLJL1')
          .then(res => {
            return res.json();
          })
          .then((res) => {
            const data = res.data;
            for (data.park of data) {
              console.log(data.park);
              // append data to div class called info
              var tag = document.createElement("p");
              var text = document.createTextNode(data.park.fullName);
              tag.appendChild(text);
              var element = document.getElementById("info");
              element.appendChild(tag);
            }
          })
          .catch(error => console.log(error));
    })();
    </script>
    <div class="info" id="info">
      
    </div>
  </body>

  </html>