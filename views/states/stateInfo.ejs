    <script src="/javascript/map.js"></script>
  </head>
  <header>
    <nav>
      <ul class="firstList">
        <li class="searchBox">
          <input type="search" placeholder="Search Here">
        </li>
        <li class="fistListfirst"><a href="login.html">Log In</a></li>
      </ul>
    </nav>
    <h1 class="headerName"><a href="home.html">TraXersal</a></h1>
    <div class="dropdown">
      <button onclick="dropDown()" class="dropbtn">menu</button>
      <div id="myDropdown" class="dropdown-content">
        <a href="home.html">Home</a>
        <a href="#">State</a>
        <a href="#">Reviews</a>
        <a href="#">Contact</a>
